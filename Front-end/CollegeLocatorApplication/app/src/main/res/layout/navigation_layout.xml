<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/navigation_drawer_bkg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filters:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_margin="15dp" />

            <Button
                android:id="@+id/btn_apply_filters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="22dp"
                android:text="Apply Filters" />

        </RelativeLayout>

        <View
            style="@style/Divider"
            android:background="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:id="@+id/radioGroup0">

            <RadioButton
                android:id="@+id/all_chek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/diploma_chek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diploma"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="15dp" />

            <RadioButton
                android:id="@+id/deg_chek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Degree"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="15dp" />

            <RadioButton
                android:id="@+id/med_chek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="15dp" />

        </RadioGroup>

        <View
            style="@style/Divider"
            android:background="@color/black" />

        <CheckBox
            android:id="@+id/chk_hostel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hostel Availability"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp" />

        <View
            style="@style/Divider"
            android:background="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fees:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_fees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            style="@style/Divider"
            android:background="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:id="@+id/radioGroup1">

            <RadioButton
                android:id="@+id/radioBtnDAny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Any"
                android:textSize="16sp"
                android:checked="true"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioBtnNearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nearby(50Km)"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioBtnFar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A bit Far(100Km)"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioBtnReallyFar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Really Far(200Km)"
                android:textSize="16sp"
                android:textColor="@color/black" />

        </RadioGroup>

        <View
            style="@style/Divider"
            android:background="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CutOff:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_cutoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            style="@style/Divider"
            android:background="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Institute Type:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:id="@+id/radioGroup2">

            <RadioButton
                android:id="@+id/radioBtnIAny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Any"
                android:textSize="16sp"
                android:checked="true"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioBtnGov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Government"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioBtnPri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private"
                android:textSize="16sp"
                android:textColor="@color/black" />

        </RadioGroup>

        <View
            style="@style/Divider"
            android:background="@color/black" />

        <CheckBox
            android:id="@+id/chk_deemed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deemed University"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp" />

        <View
            style="@style/Divider"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="State:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp" />

            <Spinner
                android:id="@+id/spinner_states"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_weight="2.5"
                android:padding="6dp"
                android:layout_margin="10dp"
                android:spinnerMode="dropdown" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>